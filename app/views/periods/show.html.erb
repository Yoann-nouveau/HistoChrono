<div class="container">
  <%= render "shared/display_infosevent" %>
  <%= render "shared/display_infosmonument" %>

  <div class="row" id="personalities-row">
    <div class="cards col-sm-6">
      <% @personalities.each do |personality|  %>
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasPerso" aria-controls="offcanvasPerso">
        <div class="card-trip">
          <a class="avatar" href="<%= personality.wikipedia_url %>" target="_blank">
          <% if personality.photo.attached? %>
            <%= image_tag personality.photo, class: "avatar", alt: personality.description, title: personality.description %>
          <% else %>
            <%= image_tag "utilisateur.png", class: "avatar", alt: personality.description, title: personality.description %>
          <% end %>
          </a>
        </div>
        </button>
      <% end %>
    </div>

    <div class="search-row col-sm-3">
      <%= render "shared/searchbar" %>
    </div>
  </div>

  <div class="row" id="map-row">

    <div class="box-legend col">
      <div class="row">
        <div class="col-md-12">
          <%= render "shared/timeline" %>
        </div>
      </div>
    </div>

    <div class="box-map col-sm-8" data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-polygon-value="<%= @polygon.to_json%>"
        data-map-markersevent-value="<%= @markersevent.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      <div id='map' style="width: 100%; height: 600px;" data-map-target="displaymap"></div>
      <% if user_signed_in? %>
        <%= render "shared/button_add" %>
      <% end %>
      <div>
        <%= render "shared/button_filter" %>
      </div>
    </div>
  </div>
</div>
