<%= simple_form_for [@period, @event] do |f| %>
  <%= f.input :name %>
  <%= f.input :start_day %>
  <%= f.input :start_month %>
  <%= f.input :start_year %>
  <%= f.input :end_day %>
  <%= f.input :end_month %>
  <%= f.input :end_year %>
  <%= f.input :address,
  input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :description %>
  <%= f.input :wikipedia_url %>
  <%= f.input :youtube_url %>
  <%= f.submit 'Create an event' %>
  <% end %>
