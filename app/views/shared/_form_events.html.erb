<%= simple_form_for [@period, @event] do |f| %>
  <%= f.input :name, label: "Nom" %>
  <div class="row">
    <%= f.label "Débute le" %>
    <div class="col">
      <%= f.input :start_day, placeholder: "Jour", label: false %>
    </div>
    <div class="col">
      <%= f.input :start_month, placeholder: "Mois", label: false %>
    </div>
    <div class="col">
      <%= f.input :start_year, placeholder: "Année", label: false %>
    </div>
  </div>
  <div class="row">
    <%= f.label "Fini le" %>
    <div class="col">
      <%= f.input :end_day, placeholder: "Jour", label: false%>
    </div>
    <div class="col">
      <%= f.input :end_month, placeholder: "Mois", label: false %>
    </div>
    <div class="col">
      <%= f.input :end_year, placeholder: "Année", label: false %>
    </div>
  </div>
  <%= f.input :address, label: "Adresse",
  input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :description %>
  <%= f.input :wikipedia_url, label: "Page Wikipédia"%>
  <%= f.input :youtube_url, label: "Vidéo Youtube" %>
  <%= f.submit 'Ajouter un évènement sur la carte' %>
  <% end %>
