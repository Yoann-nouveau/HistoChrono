<% @period.monuments.each do |monument| %>
  <div class="offcanvas offcanvas-start infos-monument" tabindex="-1" id="infosmonument<%= monument.id%>" aria-labelledby="infosmonumentLabel">
    <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="infosmonumentLabel"><strong><%= monument.name %></strong></h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <% if monument.photo.attached? %>
      <%= image_tag monument.photo, class:"photo-marker" %>
      <% else %>
      <img src="https://www.francebleu.fr/s3/cruiser-production/2018/06/4464e217-892f-4b79-8bea-099e2c146667/1200x680_gettyimages-526742236.jpg" alt="" class="photo-marker">
    <% end %>
    <div class="offcanvas-body">
      <div>
        <p id="description-monument"><%= monument.description %><p>
        <p><%= link_to "<i class='fa-brands fa-wikipedia-w'></i>".html_safe, monument.wikipedia_url %> <%= link_to "<i class='fa-solid fa-earth-americas'></i>".html_safe, monument.google_earth_url %></p>
        <p id="added_by"><em><small>Marqueur ajout√© par <strong><%= monument.user.nickname %></strong> le <%= monument.created_at.strftime('%d/%m/%Y') %></small></p></em>
      </div>
    </div>
  </div>
<% end %>
